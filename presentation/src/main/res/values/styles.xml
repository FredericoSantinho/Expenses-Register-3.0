<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--  Suggested View  -->
  <style name="Suggested">
    <item name="android:textViewStyle">@style/Suggested.TextView.M</item>
  </style>

  <style name="Suggested.TextView" parent="Widget.AppCompat.TextView">
    <item name="android:ellipsize">end</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Suggested.TextView.M" parent="Suggested.TextView">
    <item name="android:textColor">@color/black_87_alpha</item>
    <item name="android:textSize">@dimen/text_size_medium</item>
  </style>

  <style name="Suggested.TextView.ML" parent="Suggested.TextView">
    <item name="android:textColor">@color/black_87_alpha</item>
    <item name="android:textSize">@dimen/text_size_medium_large</item>
  </style>

  <style name="Suggested.TextView.S" parent="Suggested.TextView">
    <item name="android:textColor">@color/black_87_alpha</item>
    <item name="android:textSize">@dimen/text_size_small</item>
  </style>

  <style name="Suggested.TextView.S.Grey" parent="Suggested.TextView">
    <item name="android:textColor">@color/grey_medium</item>
    <item name="android:textSize">@dimen/text_size_small</item>
  </style>

  <style name="Suggested.TextView.L" parent="Suggested.TextView">
    <item name="android:textColor">@color/black_87_alpha</item>
    <item name="android:textSize">@dimen/text_size_large</item>
  </style>
</resources>