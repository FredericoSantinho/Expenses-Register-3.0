<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tools:layout_width="200dp"
    >

  <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
      android:id="@+id/card_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:layout_margin="2dp"
      android:clickable="true"
      android:foreground="?attr/selectableItemBackground"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      card_view:cardCornerRadius="4dp"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/Suggested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        >

      <androidx.cardview.widget.CardView
          android:id="@+id/product_icon_card_view"
          android:layout_width="50dp"
          android:layout_height="50dp"
          card_view:cardCornerRadius="8dp"
          card_view:layout_constraintEnd_toEndOf="parent"
          card_view:layout_constraintTop_toTopOf="parent"
          >

        <ImageView
            android:id="@+id/product_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_background"
            />

      </androidx.cardview.widget.CardView>

      <TextView
          android:id="@+id/description_text"
          style="@style/Suggested.TextView.M"
          android:layout_width="0dp"
          android:layout_marginEnd="4dp"
          android:maxLines="2"
          android:paddingTop="4dp"
          card_view:layout_constraintEnd_toStartOf="@id/product_icon_card_view"
          card_view:layout_constraintStart_toStartOf="parent"
          card_view:layout_constraintTop_toTopOf="parent"
          tools:text="Bolacha Oreo Coberta Chocolate Branco 246g"
          />

      <TextView
          android:id="@+id/category_text"
          style="@style/Suggested.TextView.S"
          android:layout_width="wrap_content"
          android:paddingBottom="4dp"
          android:textStyle="bold"
          card_view:layout_constraintBottom_toBottomOf="parent"
          card_view:layout_constraintStart_toStartOf="parent"
          tools:text="Super"
          />

      <TextView
          android:id="@+id/price_text"
          style="@style/Suggested.TextView.M"
          android:layout_width="wrap_content"
          android:paddingBottom="4dp"
          android:textStyle="bold"
          card_view:layout_constraintBottom_toBottomOf="@id/category_text"
          card_view:layout_constraintEnd_toEndOf="parent"
          tools:text="2,09 â‚¬"
          />


    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>